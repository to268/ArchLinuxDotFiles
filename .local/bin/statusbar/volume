#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

volume=$(amixer sget Master | grep "Front Right:" | sort -n -r | awk '{print $5}' | cut -d "[" -f2 | cut -d "]" -f1 | sed "s/%//")
state=$(amixer sget Master | grep "Front Right:" | sort -n -r | awk '{print $7}' | cut -d "[" -f2 | cut -d "]" -f1)

off="off"

[ "$state" == "$off" ] && echo "ðŸ”‡ $volume%" && exit;

if [[ $volume -gt "70" ]]; then
	echo "ðŸ”Š $volume%"
elif [[ $volume -lt "30" ]]; then
	echo "ðŸ”ˆ $volume%"
else
	echo "ðŸ”‰ $volume%"
fi


