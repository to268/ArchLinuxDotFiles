# WM independent hotkeys

super + shift + l
	dm-tools lock

super + shift + c
	dm-tools switch-to-greeter

super + x
	dmenushutdown

# Usual programs

ctrl + shift + w
	$BROWSER

ctrl + shift + c
	$TERMINAL -e calcurse -D .config/calcurse/

ctrl + shift + n
	$TERMINAL -e newsboat

ctrl + shift + m
	$TERMINAL -e neomutt

ctrl + shift + p
	$TERMINAL -e ncmpcpp

ctrl + shift + d
	discord

# Alternative programs and shortcuts

alt + u
	dmenuunicode

alt + shift + c
	$TERMINAL -e genius

alt + s
	scrot $HOME/files/Screenshots/%d-%m-%Y.png

alt + shift + s
	maim -s $HOME/files/Screenshots/$(date +%s).png

alt + f
	cd ~/files; $TERMINAL

alt + d
	cd ~/files/Dev; $TERMINAL

alt + shift + v
	cd ~/files/Videos; $TERMINAL

alt + shift + p
	cd ~/files/Photos; $TERMINAL

alt + shift + m
	cd ~/files/Music; $TERMINAL

# Alsa Song

# Increase volume
alt + {_,shift +} + KP_Add
	amixer sset Master {2,10}%+; kill -44 $(pidof bar-widgets)

# Decrease volume
alt + {_,shift +} + KP_Subtract
	amixer sset Master {2,10}%-; kill -44 $(pidof bar-widgets)

# Mute/Unmute
alt + m
	amixer sset Master toggle; kill -44 $(pidof bar-widgets)

# mpd control

alt + comma
	mpc prev

alt + semicolon
	mpc next

alt + colon
	mpc seek -10

alt + exclam
	mpc seek +10

alt + parenright
	mpc random off; notify-send "Music Player" "Random mode off"

alt + shift + parenright
	mpc random on; notify-send "Music Player" "Random mode on"

alt + equal
	mpc repeat off; notify-send "Music Player" "Repeat mode off"

alt + shift + equal
	mpc repeat on; notify-send "Music Player" "Repeat mode on"

alt + dead_circumflex
	mpc toggle

alt + dollar
	mpc stop

alt + ugrave
	mpc shuffle; notify-send "Music Player" "Shuffled all songs"

alt + asterisk
	mpc update; notify-send "Music Player" "Database Updated"

alt + agrave
	mpc seek 0%
