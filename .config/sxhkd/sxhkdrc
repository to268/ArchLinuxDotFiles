# WM independent hotkeys

super + shift + l
	dm-tools lock

super + shift + c
	dm-tools switch-to-greeter

super + x
	dmenushutdown

# Usual programs

ctrl + shift + w
	$BROWSER

ctrl + shift + c
	$TERMINAL -e calcurse -D .config/calcurse/

ctrl + shift + n
	$TERMINAL -e newsboat

ctrl + shift + m
	$TERMINAL -e neomutt

ctrl + shift + p
	$TERMINAL -e ncmpcpp

ctrl + shift + d
	discord

# Alternative programs and shortcuts

alt + u
	dmenuunicode

alt + shift + c
	$TERMINAL -e genius

alt + s
	scrot $HOME/files/Screenshots/%d-%m-%Y.png

alt + shift + s
	maim -s $HOME/files/Screenshots/$(date +%s).png

alt + f
	cd ~/files; $TERMINAL

alt + d
	cd ~/files/Dev; $TERMINAL

alt + shift + v
	cd ~/files/Videos; $TERMINAL

alt + shift + p
	cd ~/files/Photos; $TERMINAL

alt + shift + m
	cd ~/files/Music; $TERMINAL

# Alsa Song

# Increase volume
alt + {_,shift +} + KP_Add
	amixer sset Master {2,10}%+

# Decrease volume
alt + {_,shift +} + KP_Subtract
	amixer sset Master {2,10}%-

# Mute/Unmute
alt + shift + m
	amixer sset Master toggle

# mpd control

alt + comma
	mpc prev

alt + semicolon
	mpc next

alt + colon
	mpc seek -10

alt + exclam
	mpc seek +10

alt + {_,shift +} + parenright
	mpc random {off, on}

alt + {_,shift +} + equal
	mpc repeat {off, on}

alt + dead_circumflex
	mpc toggle

alt + dollar
	mpc stop

alt + ugrave
	mpc shuffle

alt + asterisk
	mpc update

alt + agrave
	mpc seek 0%
