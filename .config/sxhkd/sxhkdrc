# WM independent hotkeys

# Launch tmux
super + shift + Return
    $TERMINAL -e tmux

# Minimal Version
super + shift + l
	slock

# Lightdm Version
#super + shift + l
#	dm-tools lock

# Minimal Version
super + shift + c
	sudo pkill x

# Lightdm Version
#super + shift + c
#	dm-tools switch-to-greeter

super + x
	dmenushutdown

# Usual programs

ctrl + shift + w
    GTK_THEME=Ant:dark $BROWSER

ctrl + shift + c
	$TERMINAL -e calcurse -D .config/calcurse/

ctrl + shift + n
	$TERMINAL -e newsboat

ctrl + shift + m
	$TERMINAL -e neomutt

alt + p
    PASSWORD_STORE_DIR="$HOME/.local/share/password-store" passmenu -l 20

ctrl + alt + p
	$TERMINAL -e ncmpcpp

# Alternative programs and shortcuts

alt + u
	dmenuunicode

alt + shift + c
	$TERMINAL -e genius

alt + s
	scrot $HOME/files/Screenshots/%d-%m-%Y.png

alt + shift + s
	maim -s $HOME/files/Screenshots/$(date +%s).png

alt + f
	$TERMINAL -d ~/files

alt + d
	$TERMINAL -d ~/files/Dev

alt + shift + v
	$TERMINAL -d ~/files/Videos

alt + shift + p
	$TERMINAL -d ~/files/Photos

alt + shift + m
	$TERMINAL -d ~/files/Music

# Alsa Song

# Increase volume
alt + {_,shift +} + Up
	amixer sset Master {2,10}%+; kill -44 $(pidof bar-widgets)

# Decrease volume
alt + {_,shift +} + Down
	amixer sset Master {2,10}%-; kill -44 $(pidof bar-widgets)

# Mute/Unmute
alt + m
	amixer sset Master toggle; kill -44 $(pidof bar-widgets)

# mpd control

alt + comma
	mpc prev

alt + semicolon
	mpc next

alt + colon
	mpc seek -10

alt + exclam
	mpc seek +10

alt + parenright
	mpc random off; notify-send "Music Player" "Random mode off"

alt + shift + parenright
	mpc random on; notify-send "Music Player" "Random mode on"

alt + equal
	mpc repeat off; notify-send "Music Player" "Repeat mode off"

alt + shift + equal
	mpc repeat on; notify-send "Music Player" "Repeat mode on"

alt + dead_circumflex
	mpc toggle

alt + dollar
	mpc stop

alt + ugrave
	mpc shuffle; notify-send "Music Player" "Shuffled all songs"

alt + asterisk
	mpc update; notify-send "Music Player" "Database Updated"

alt + agrave
	mpc seek 0%


# Swap keyboard

ctrl + Return
	setxkbmap fr && notify-send --urgency=low "New Keymap" "$(~/.local/bin/statusbar/keyboard)"

ctrl + shift + Return
	setxkbmap us -variant dvorak && notify-send --urgency=low "New Keymap" "$(~/.local/bin/statusbar/keyboard)"

ctrl + alt + Return
	setxkbmap fr -variant bepo && notify-send --urgency=low "New Keymap" "$(~/.local/bin/statusbar/keyboard)"

# Scripts Shortcuts

alt + shift + 1
	dmenumanpage

alt + shift + 2
	dmenumount

alt + shift + 3
	dmenuumount

alt + shift + 4
	kill -45 $(pidof notify-manager)

alt + shift + 5
	notify-send --urgency=low "Changed Notification Apparence" "Notifications will be hidden or showed" && sleep 2 && notify-send "DUNST_COMMAND_TOGGLE"
