#!/bin/sh

# Aliases
alias p="sudo pacman"
alias sys="sudo systemctl"
alias v="vim"
alias sv="sudo vim"
alias nv="nvim"
alias snv="sudo nvim"
alias m="man"
alias dmenu_run="dmenu_run -nb '#393535' -nf '#cccccc' -sb '#ef4e4e' -sf '#feeeee'"
alias sxhkd="sxhkd -m -1"
alias r2="radare2"
alias rbin="rabin2"
alias yt="youtube-dl --add-metadata -i"
alias yta="yt -x -f bestaudio/best"
alias ffmpeg="ffmpeg -hide_banner"
alias ytv="youtube-viewer -C --player=mpv"

# Git Aliases
alias g="git"
alias ga="git add"
alias gap="git apply"
alias gb="git branch"
alias gch="git checkout"
alias gcl="git clone"
alias gco="git commit"
alias gd="git diff"
alias gf="git fetch"
alias ggr="git grep"
alias gi="git init"
alias gl="git log"
alias gpl="git pull"
alias gps="git push"
alias gr="git remote"
alias grb="git rebase"
alias grm="git rm"
alias grst="git reset"
alias grsto="git restore"
alias gs="git status"
alias gsc="git sparse-checkout"
alias gsh="git show"
alias gsm="git submodule"
alias gst="git subtree"
alias gsw="git switch"
alias gt="git tag"

# Adding color
alias ls="ls --color=auto --group-directories-first"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias hcat="highlight --out-format=ansi"

# Weather
alias weather="curl http://wttr.in/$LOCATION"
alias weath="weather"
