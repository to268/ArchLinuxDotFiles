#!/bin/sh

# Aliases
alias ccat="bat"
alias dmenu_run="dmenu_run -nb '#393535' -nf '#cccccc' -sb '#ef4e4e' -sf '#feeeee'"
alias ffmpeg="ffmpeg -hide_banner"
alias fhop="hfzf --bind 'enter:execute(smartopen {})'"
alias fop="fzf --bind 'enter:execute(smartopen {})'"
alias fzf="fzf --reverse"
alias hex="hexyl"
alias hfzf="rg --hidden --no-ignore --files --no-messages | fzf"
alias ll="exa --group-directories-first -l"
alias m="man"
alias nv="nvim"
alias p="sudo pacman"
alias pamu="passmenu -l 20"
alias r2="radare2"
alias rbin="rabin2"
alias snv="sudo nvim"
alias sv="sudo sv"
alias svi="sudo vim"
alias sys="sudo systemctl"
alias tm="tmux"
alias v="vim"
alias yt="youtube-dl --add-metadata -i"
alias yta="yt -x -f bestaudio/best"
alias ytv="straw-viewer -C --player=mpv"

# Git Aliases
alias g="git"
alias ga="git add"
alias gap="git apply"
alias gb="git branch"
alias gch="git checkout"
alias gcl="git clone"
alias gco="git commit"
alias gd="git diff"
alias gf="git fetch"
alias ggr="git grep"
alias gi="git init"
alias gl="git log"
alias gpl="git pull"
alias gps="git push"
alias gr="git remote"
alias grb="git rebase"
alias grm="git rm"
alias grst="git reset"
alias grsto="git restore"
alias gs="git status"
alias gsc="git sparse-checkout"
alias gsh="git show"
alias gsm="git submodule"
alias gst="git subtree"
alias gsw="git switch"
alias gt="git tag"

# Adding color
alias diff="diff --color=auto"
alias grep="grep --color=auto"
alias hcat="highlight --out-format=ansi"
alias ls="ls --color=auto --group-directories-first"
